</head>
<body class="secondpage">
<div class="container">

    <div class="page-header text-center">
        <h1 id="top"><span id="bot">Profile Page</span></h1>
        <a href="/logout" class="btn btn-default btn-sm" id="logout">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->        
        <div class="col-sm-6">
          <h3>MEMES</h3>
                    <ul class="messages">
          <% for(var i=0; i<messages.length; i++) {%>
            <li class="message">
              <img src="<%= messages[i].img %>" alt="">
              <span><%= messages[i].name %></span>
              <a href="/delete">üóëÔ∏è</a>
            </li>
          <% } %>
          </ul>

          <h2>Add a Picture</h2>
          <form method="post" enctype="multipart/form-data" action="/upload">
            <input type="file" name="profileImg" class="">
            <input type="text" name="name" id="" placeholder="Enter name" required>
            <input type="submit" value="Submit" class="submit" >
        </form>
        </div>
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Local</h3>

                <% if (user.local.email) { %>
                    <p>
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>email</strong>: <%= user.local.email %><br>
                        <strong>password</strong>: <%= user.local.password %>
                    </p>

                    <a href="/unlink/local" class="btn btn-default">Unlink</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>

            </div>
        </div>

</div>

<script src="main.js" type="text/javascript"></script>

</body>
</html>
